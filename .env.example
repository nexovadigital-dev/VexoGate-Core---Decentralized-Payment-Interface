# ==============================================
# VEXOGATE PROTOCOL - ENVIRONMENT CONFIGURATION
# ==============================================

APP_NAME="VexoGate Protocol"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.webxdev.pro

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=vexogate_db
DB_USERNAME=vexogate_user
DB_PASSWORD=your_secure_password_here

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@vexogate.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ==============================================
# VEXOGATE BLOCKCHAIN CONFIGURATION
# ==============================================

POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_NETWORK=mainnet
POLYGON_CHAIN_ID=137
USDC_CONTRACT_ADDRESS=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174

# ==============================================
# MASTER WALLET (Gas Station)
# ⚠️ CRÍTICO: Debe tener MATIC para pagar gas
# ==============================================

MASTER_WALLET_PRIVATE_KEY=0xYOUR_MASTER_WALLET_PRIVATE_KEY_HERE
GAS_INJECTION_AMOUNT=0.03

# ==============================================
# VEXOGATE FEE COLLECTION
# ==============================================

VEXO_WALLET_ADDRESS=0xYOUR_VEXOGATE_WALLET_ADDRESS_HERE
VEXO_FEE_PERCENTAGE=2.5
VEXO_FEE_MINIMUM=1.0

# ==============================================
# SECURITY & COMPLIANCE
# ==============================================

MANUAL_APPROVAL_THRESHOLD=500
FORCE_MANUAL_APPROVAL=false
VEXOGATE_API_KEY_SECRET=base64:YOUR_RANDOM_API_KEY_HERE
TRANSACTION_TIMEOUT=60

# ==============================================
# PAYMENT PROVIDERS & WORKER
# ==============================================

DEFAULT_PAYMENT_PROVIDER=transak
VEXO_SCAN_INTERVAL=1
MAX_ORDERS_PER_CYCLE=50
MAX_TRANSACTION_RETRIES=3

VITE_APP_NAME="${APP_NAME}"
